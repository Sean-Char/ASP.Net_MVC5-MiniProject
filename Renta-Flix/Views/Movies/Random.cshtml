@model Renta_Flix.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
	This is a comment
	on multiple lines
*@


@{
	var className = Model.Customer.Count > 0 ? "popular" : null;
}


<h2 class="@className">@Model.Movie.Name</h2>

@if (Model.Customer.Count == 0)
{
	<text>No one has rented this movie before.</text>
}
else
{
<ul>
	@foreach (var customers in Model.Customer)
	{
		<li>@customers.Name</li>
	}
</ul>
}
